<% @title = 'Table of Contents'%>
<h1>Table of contents</h1>

  <ul>
    <% @sections.each do |section| %>
      <div class="col-sm-6 ">
        <li><h5><%= section.name %></h5></li>
        <ul>
          <% section.subsections.each do |subsection| %>
          <div class="subsection">
            <li><%= subsection.name %></li>
              <ul>
                <% subsection.lessons.each do |lesson| %>
                <li class="lessons"><%= link_to lesson.name, section_subsection_lesson_path(section,subsection,lesson) %></li>
                <% end %>
              </ul>
          </div>
          <% end %>
        </ul>
      </div>
    <% end %>
  </ul>

  <script>
  $(document).ready(function() {
    $(".subsection").click(function(event) {
      $(this).children().children("li.lessons").show();
      event.preventDefault();
    });
  });
  </script>
