<h1>Table of contents</h1>

  <ul>
    <% @sections.each do |section| %>
      <div class="col-sm-6 ">
        <li><h5><%= section.name %></h5></li>
        <ul>
          <% section.subsections.each do |subsection| %>
          <li class="subsection"><%= subsection.name %></li>
            <ul>
              <% subsection.lessons.each do |lesson| %>
              <div class="lessons">
              <li><%= link_to lesson.name, section_subsection_lesson_path(section,subsection,lesson) %></li>
            </div>
              <% end %>
            </ul>
          <% end %>
        </ul>
      </div>
    <% end %>
  </ul>

  <script>
  $(document).ready(function() {
    $("li.subsection").click(function(event) {
      $(".lessons").toggle();
      event.preventDefault();
    });
  });
  </script>
